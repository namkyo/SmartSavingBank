<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.MainActivity">

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></WebView>

    <LinearLayout
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnOcr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OCR"/>

        <Button
            android:id="@+id/btnSignCert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공인인증서 목록"/>

        <Button
            android:id="@+id/btnCertManage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공인인증서 관리"/>

        <Button
            android:id="@+id/btnCertImport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공인인증서 가져오기"/>

        <Button
            android:id="@+id/btnScraping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="스크래핑"/>

        <Button
            android:id="@+id/btnRegisterPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="간편비밀번호 등록"/>

        <Button
            android:id="@+id/btnRegisterPattern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="패턴 등록"/>

        <Button
            android:id="@+id/btnRegisterBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="지문 등록"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>