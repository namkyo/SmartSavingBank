<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cert_backgroud"
    android:gravity="center_vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_10"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="일자"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textGray_747474"
                    android:textSize="@dimen/text_12" />
                <TextView
                    android:id="@+id/push_hist_list_item_date"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textGray_747474"
                    android:textSize="@dimen/text_12" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="제목"
                    android:textColor="@color/textBlack_2b2b2b"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/push_hist_list_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/textBlack_2b2b2b"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:text="내용"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textGray_747474"
                    android:textSize="@dimen/text_12" />

                <TextView
                    android:id="@+id/push_hist_list_item_body"
                    android:lines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textGray_747474"
                    android:textSize="@dimen/text_12" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_weight="1"
                android:id="@+id/push_hist_list_item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/all_nobar_btn_close" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>